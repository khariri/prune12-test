<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mutasi_tree" model="ir.ui.view">
		<field name="name">djbc.mutasi.tree</field>
		<field name="model">djbc.mutasi</field>
		<field name="arch" type="xml">
			<tree string="Laporan Mutasi" create="0" edit="0">
				<field name="kode_barang"/>
				<field name="nama_barang"/>
				<field name="saldo_awal"/>
				<field name="pemasukan"/>
				<field name="pengeluaran"/>
				<field name="penyesuaian"/>
				<field name="stock_opname"/>
				<field name="saldo_akhir"/>
				<field name="selisih"/>
				<field name="keterangan"/>
				<field name="warehouse"/>
			</tree>
		</field>
	</record> 

	<record id="mutasi_form" model="ir.ui.view">
		<field name="name">djbc.mutasi.form</field>
		<field name="model">djbc.mutasi</field>
		<field name="arch" type="xml">
			<form string="Laporan Mutasi" create="0" edit="0">
			  <group>
			     <group>
				<field name="kode_barang"/>
				<field name="nama_barang"/>
				<field name="saldo_awal"/>
				<field name="pemasukan"/>
				<field name="pengeluaran"/>
				<field name="penyesuaian"/>
			     </group>
			     <group>	
				<field name="stock_opname"/>
				<field name="saldo_akhir"/>
				<field name="selisih"/>
				<field name="keterangan"/>
				<field name="warehouse"/>
			     </group>
			  </group>
			</form>
		</field>
	</record> 

	<record id="mutasi_action" model="ir.actions.act_window">
		<field name="name">Laporan Mutasi</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">djbc.mutasi</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
   		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				It's Empty
			</p>
		</field>
	</record>
</odoo>
